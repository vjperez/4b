function showArray(){
 if (showing == 1){
    var elHtml = [""];
    var index = 0;
    while(index < array.length){
      elHtml[index%showing] = elHtml[index%showing] + "<div class=\"vaciocien\"></div>" + array[index][1];
      index++; 
    }
    document.getElementById("uno").innerHTML = elHtml[0];
  }
  if (showing == 2){
    var elHtml = ["", ""];
    var index = 0;
    while(index < array.length){
      elHtml[index%showing] = elHtml[index%showing] + "<div class=\"vaciocien\"></div>" + array[index][1];
      index++; 
    }
    document.getElementById("uno").innerHTML = elHtml[0];
    document.getElementById("dos").innerHTML = elHtml[1];
  }
  if(showing == 3){
    var elHtml = ["", "", ""];
    var index = 0;
    while(index < array.length){
      elHtml[index%showing] = elHtml[index%showing] + "<div class=\"vaciocien\"></div>" + "<div class=\"vaciocien\"></div>" + "<div class=\"vaciocien\"></div>" + array[index][1];
      index++; 
    }
    document.getElementById("uno").innerHTML = elHtml[0];
    document.getElementById("dos").innerHTML = elHtml[1];
    document.getElementById("tres").innerHTML = elHtml[2];
  }    
}

function cambio1( mqSmall ){
 if (mqSmall.matches){
    showing = 1;
    showArray();
  }  
}   

function cambio2( mqMedium ){
if (mqMedium.matches){
    showing = 2;
    showArray();
  }
}

function cambio3( mqBig ){
  if(mqBig.matches){
    showing = 3;
    showArray();
  } 
} 
